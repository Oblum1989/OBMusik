<div class="container mw-100 mt-4">
    <div class="row">
        <div class="col-8">
            <div class="mb-5">
                <h1><%= @artist.name %></h1>
                <p>albums (<%= @albums.length %>)</p>
            </div>
            <div class="row">
                <% @albums.each do |album| %>
                    <div class="col-3 foto-artista-show p-3">
                        <div class="card">
                        <img class="card-img-top" src=<%= album.image_url %> alt=<%= album.name %>  >
                        <div class="card-body">
                            <h4 class="card-title"><%= album.name %></h4>
                            <p><%= album.released_at %></p>
                        </div>
                        </div>
                    </div>
                <% end %>
            </div>
            
        </div>
        <div class="col-4">
            <div>
                <img src=<%= @artist.image_url %> alt=<%= @artist.name %> class="w-100">
            </div>
        </div>
    </div>
</div>
